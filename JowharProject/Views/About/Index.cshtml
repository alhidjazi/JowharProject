@using EntityLayer.Concrete
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    @Html.Action("AboutPartial", "About")
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-gradient">
                                <div class="card-header text-muted border-bottom-0">
                                    <i class="fas fa-heading">: @item.AboutName</i>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b></b></h2>
                                            <details>
                                                <summary class="d-inline-block text-truncate" style="max-width: 150px;">@item.Description</summary>
                                                @item.Description
                                            </details>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="@item.Image" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-blue">

                                    @*<div class="text-lift">
                                            <a href="/About/AboutDetail/@item.AboutID" class="btn btn-sm btn-primary">
                                                <i class="fas fa-book-reader"></i> Detail
                                            </a>

                                        </div>*@
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
    <strong>
        @Html.PagedListPager((IPagedList)Model, Page => Url.Action("Index", new { Page }))
    </strong>
</body>
</html>
<!-- Scrollable modal -->
