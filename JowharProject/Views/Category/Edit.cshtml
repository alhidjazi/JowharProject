@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
<div class="form-group">

    @Html.HiddenFor(x => x.CategoryID, new { @class = "form-control" })
    <br />
    @Html.Label("Category Name")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    @Html.Label("Status: ")
    <select name="CategoryStatus">
        <option>Select</option>
        <option value="true">True</option>
        <option value="false">False</option>
    </select>
    <br />
    @Html.Label("Description")
    @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update</button>
</div>
}
