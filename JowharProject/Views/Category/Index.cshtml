@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-hover">
<div class="mr-1">
    <tr class="bg-gradient-green">
        <th>#</th>
        <th>Category Name</th>
        <th>Category Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td><a href="/Category/Delete/@item.CategoryID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/Edit/@item.CategoryID" class="btn btn-warning">Update</a></td>
        </tr>

    }
</div>
</table>

<a href="/Category/Add/" class="btn btn-info">New Category</a>
<br />
<div>
    <strong>
        @Html.PagedListPager((IPagedList)Model, Page => Url.Action("Index", new { Page }))
    </strong>
</div>