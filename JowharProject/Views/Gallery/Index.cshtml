<body  class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <!-- Main content -->
    
    <section style="background-color:#0e484e" ; class="gallery py-md-5 py-3" id="projects">
        <div class="gallery-inner container py-md-5 pb-3">
            @Html.Action("Gall", "Gallery")
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 proj_gallery_grid" data-aos="zoom-in">
                        <div class="section_1_gallery_grid">
                            <a title="@item.ImageName" href="@item.ImagePath">
                                <div class="section_1_gallery_grid1">
                                    <img src="@item.ImagePath" alt=" " class="img-fluid" />
                                    <div class="proj_gallery_grid1_pos">
                                        <h3>@item.ImageName</h3>
                                    </div>

                                </div>
                                @*<a href="/Gallery/Delete/@item.ImageID" class="btn btn-info" style="font-size:15px">Delete</a>*@
                            </a>
                            <i class="fas fa-remove" style="color:#e63838"><a href="/Gallery/Delete/@item.ImageID" style="color:#000000">Delete</a></i>
                            @*<i class="fas fa-edit"><a href="/Gallery/Edit/@item.ImageID">Edit</a></i>*@
                            @*<i class=" fas fa-remove"></i>*@
                        </div>
                    </div>

                }
                <!--end portfolio-area -->
            </div>

            <!-- //gallery container -->
            <strong>
                @Html.PagedListPager((IPagedList)Model, Page => Url.Action("Index", new { Page }))
            </strong>
        </div>
    </section>
