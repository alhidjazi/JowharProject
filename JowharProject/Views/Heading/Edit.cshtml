@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Heading", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.HeadingID, new { @class = "form-control" })
    @*<br />*@
    @Html.Label("Heading Name")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    <br />
    @Html.Label("Date")
    @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })
    <br />
    @Html.Label("Status: ")
    <select name="HeadingStatus">
        <option>Select</option>
        <option value="true">True</option>
        <option value="false">False</option>
    </select>
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update</button>
</div>
}
